<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calc_drawable"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".CalcActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="138dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/phrase"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="right"
            android:textColor="#818181"
            android:fontFamily="@font/poppins_medium"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="2dp"
            android:hint="0"
            android:textColorHint="@color/white"
            android:gravity="right"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginHorizontal="33dp"
        android:layout_marginTop="134dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppins_bold"
            android:text="1"
            android:textColor="#339DFF"
            android:textSize="24sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:contentDescription="@string/_1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#339DFF"
            android:textSize="24sp"
            app:srcCompat="@drawable/vector_calc" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/operation"
            android:fontFamily="@font/poppins_bold"
            android:text="/"
            android:textColor="#339DFF"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/operation"
            android:fontFamily="@font/poppins_bold"
            android:text="*"
            android:textColor="#339DFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginHorizontal="33dp"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="7"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"

            android:fontFamily="@font/poppins_bold"
            android:text="8"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="9"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_subtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/operation"
            android:fontFamily="@font/poppins_bold"
            android:text="-"
            android:textColor="#339DFF"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_marginHorizontal="33dp"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="4"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="5"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="6"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/operation"
            android:fontFamily="@font/poppins_bold"
            android:text="+"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_marginHorizontal="33dp"
        android:weightSum="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="1"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="2"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="3"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/operation"
            android:fontFamily="@font/poppins_bold"
            android:text="="
            android:textColor="#29A8FF"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:layout_marginHorizontal="33dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="0"
            android:textColor="#29A8FF"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_invis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:background="@drawable/button_nums"
            android:fontFamily="@font/poppins_bold"
            android:text="0"
            android:textColor="#29A8FF"
            android:textSize="32sp" />
    </LinearLayout>

</LinearLayout>